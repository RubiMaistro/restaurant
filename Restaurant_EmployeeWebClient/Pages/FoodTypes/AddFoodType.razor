@page "/food/type/add"

@inject HttpClient HttpClient
@inject NavigationManager NavigationManager

<PageTitle>Étel tipus</PageTitle>


<FoodTypeForm ButtonTitle="Hozzáadás" SubmitForm="@AddNewFoodType" Type="@Type" CompTitle="Étel tipus hozzáadása" ></FoodTypeForm>

@code {
    public FoodType Type { get; set; } = new FoodType();

    private async Task AddNewFoodType()
    {
        await HttpClient.PostAsJsonAsync("food/type", Type);
        NavigationManager.NavigateTo("food/type/list");
    }
}
