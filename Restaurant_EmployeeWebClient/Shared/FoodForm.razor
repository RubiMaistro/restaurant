<EditForm Model="@Food" OnValidSubmit="@SubmitForm">
    <DataAnnotationsValidator/>

    <div class="form-group row">
        <label for="firstname" class="col-sm-3">Megnevezése</label>
        <div class="col-sm-6">
            <InputText id="firstname" class="form-control" @bind-Value="@Food.Name" placeholder="Étel megnevezése"></InputText>
            <ValidationMessage For="() => Food.Name"/>
        </div>
    </div>

    <div class="form-group row">
        <label for="lastname" class="col-sm-3">Leírás</label>
        <div class="col-sm-6">
            <InputText id="lastname" class="form-control" @bind-Value="@Food.Description" placeholder="Étel leírása"></InputText>
            <ValidationMessage For="() => Food.Description"/>
        </div>
    </div>

    <div class="form-group row">
        <label for="carmodel" class="col-sm-3">Típusa (ez helyett dropdown kell)</label>
        <div class="col-sm-6">
            <input id="plate_number" class="form-control" value="@Food.FoodTypeId" placeholder="(ide egy dropdown kell)" />
            <ValidationMessage For="() => Food.FoodTypeId"/>
        </div>
    </div>

    <div class="form-group row">
        <label for="plate_number" class="col-sm-3">Ára</label>
        <div class="col-sm-6">
            <input id="plate_number" class="form-control" value="@Food.Price" placeholder="Étel ára forintban" />
            <ValidationMessage For="() => Food.Price"/>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">@ButtonTitle</button>
</EditForm>