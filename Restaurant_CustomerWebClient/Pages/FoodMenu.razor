@page "/foodmenu/{TypeId}"
@using Radzen

<PageTitle>Menü</PageTitle>

<h1>@FoodType.Name</h1>

@if(Foods == null)
{
    <RadzenCard>
        <h4 class="mb-4">Loading...</h4>
        <RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" />
    </RadzenCard>
}
else 
{
    @if(Foods.Count == 0)
    {
        <RadzenCard class="d-flex justify-content-center align-items-center">
            <RadzenLabel Style="font-size: x-large" Text="Nincs megjeleníthető adat..."></RadzenLabel>
        </RadzenCard>
    }
    else
    {
        <div class="container">
            <div class="row py-5">
                <div class="col">
                    <RadzenCard class="d-flex flex-column align-items-center">
                        <RadzenDataList WrapItems="true" AllowPaging="true" Data="@Foods" TItem="Food" PageSize="10" PagerHorizontalAlign="HorizontalAlign.Left" ShowPagingSummary="true">
                            <Template Context="food">
                                <RadzenCard Style="width: 100%; margin: 1.5rem; overflow: hidden;">
                                    <div class="container">
                                        <div class="row">
                                            <div class="column d-flex justify-content-between align-content-center">
                                                <div class="m-4">
                                                    <RadzenImage Path="images/default.jpg" Class="rounded-circle float-left" 
                                                        Style="height: 150px; border-radius: 10px" />
                                                </div>
                                                <div class="row">
                                                    <div style="font-size: xx-large">
                                                
                                                        @(food.Name)
                                                    </div>
                                                    <div style="font-size: large">
                                                        @(food.Description)
                                                    </div>
                                                </div>
                                                <div class="column">
                                                    <div class="m-4 col-md-6 order-first order-lg-last col-lg-3 text-sm-right text-lg-center mb-3 mb-lg-0" style="width: fit-content">
                                                        <RadzenBadge BadgeStyle="BadgeStyle.Secondary" Style="font-size: x-large" Class="price-badge" Text=@($"{String.Format(new System.Globalization.CultureInfo("hu-HU"), "{0:C}", food.Price)}") />
                                                    </div>
                                                    <div>
                                                        <RadzenButton Text="Megrendelés" class="m-4 p-2" Style="font-size: x-large; width: fit-content; border-radius: 20px" />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </RadzenCard>
                            </Template>
                        </RadzenDataList>

                    </RadzenCard>
                </div>
            </div>
        </div>
    }
}

<style>
.product-title {
    min-height: 72px;
    color: #da0074;
    font-size: 20px;
    font-weight: bold;
    line-height: 20px;
    letter-spacing: -0.02em;
}
.price-badge {
    font-size: 16px;
    font-weight: bold;
    line-height: 20px;
    padding: 8px;
}
</style>