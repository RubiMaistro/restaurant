@inject NavigationManager NavigationMan
@inject HttpClient HttpClient

﻿<div class="ps-3 navbar navbar-dark">
    <div class="container-fluid" style="background-color: none">
        <a class="navbar-brand" style="font-size: x-large;" href="/">Rólunk</a>
    </div>
</div>

<div class="ps-3 navbar navbar-dark">
    <div class="container-fluid" style="background-color: none">
        <a class="navbar-brand" style="font-size: x-large;">Étlap Menü</a>
    </div>
</div>  

<div>
    <nav class="flex-column">
        @foreach(var type in FoodTypes)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" style="font-size: large" href="@($"/foodmenu/{type.Id}")" Match="NavLinkMatch.All">
                    @type.Name 
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    public List<FoodType> FoodTypes { get; set; } = new List<FoodType>();

    protected override async Task OnInitializedAsync()
    {
        FoodTypes = await HttpClient.GetFromJsonAsync<List<FoodType>>("food/type");
    }
}
